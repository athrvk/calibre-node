{
    "compilerOptions": {
      "target": "es2020",
      "module": "CommonJS",
      "moduleResolution": "node",
      "lib": ["es6", "es2015", "es2020"],
      "declaration": true,
      "outDir": "dist",
      "strict": true,
      "rootDir": "src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.spec.ts", "dist"]
  }